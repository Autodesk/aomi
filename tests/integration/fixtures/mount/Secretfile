# -*-YAML-*-
---
mounts:
  - path: "also_secret"
    description: "some kinda"
  - path: "also_secret"
    state: "absent"
    tags:
    - "remove"
  - path: "also_secret"
    tags:
    - "mod"
    tune:
      max_lease_ttl: "1d"
      default_lease_ttl: "3600s"

secrets:
  - files:
      - source: 'secret.txt'
        name: 'secret'
    mount: 'also_secret'
    path: 'bar'
    tags: ['file_warn']
  - var_file: 'secret.yml'
    mount: 'also_secret'
    path: 'bar'
    tags: ['var_file_warn']
