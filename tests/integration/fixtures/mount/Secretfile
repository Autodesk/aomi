mounts:
  - path: "also_secret"
    description: "some kinda"
  - path: "also_secret" 
    description: "some kinda"
    tags: ["mod"]
    tune:
      max_lease_ttl: "1d"
      default_lease_ttl: "3600s"
  - path: "also_secret"
    state: "absent"
    tags: ["remove"]

secrets:
  - files:
      - source: 'secret.txt'
        name: 'secret'
    mount: 'also_secret'
    path: 'bar'
    tags: ['adhoc']
  - var_file: 'secret.yml'
    mount: 'also_secret'
    path: 'bar'
    tags: ['adhoc']
